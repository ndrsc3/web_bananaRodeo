{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    
    // Output
    "outDir": "./dist/src",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/src/client.tsbuildinfo",
    
    // Type Checking
    "strict": true,
    "skipLibCheck": true,
    
    // Interop
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    // Build
    "composite": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 
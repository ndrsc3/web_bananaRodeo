{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    
    // Output
    "outDir": "../../api",
    "rootDir": "./src",
    "tsBuildInfoFile": "../../api/server.tsbuildinfo",
    
    // Type Checking
    "strict": true,
    "skipLibCheck": true,
    
    // Interop
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    // Build
    "composite": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 
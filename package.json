{
  "name": "banana-rodeo",
  "version": "1.0.0",
  "description": "A website",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean --workspaces",
    "build": "npm run clean && npm run build:shared && npm run build:client && npm run build:server",
    "build:shared": "npm run build -w @banana-rodeo/shared",
    "build:client": "vite build packages/client",
    "build:server": "tsc -p packages/server/tsconfig.json",
    "dev": "vite packages/client",
    "watch:ts": "tsc -b --watch",
    "watch": "concurrently \"npm run watch:ts\" \"npm run dev\"",
    "vercel-dev": "cross-env NODE_ENV=development vercel dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vercel/node": "^5.1.7",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  },
  "dependencies": {
    "@vercel/kv": "^0.2.4"
  }
}

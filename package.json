{
  "name": "banana-rodeo",
  "version": "1.0.0",
  "description": "A website",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean --workspaces",
    "build": "npm run clean && npm run build:client && npm run build:server && npm run build:static",

    "build:client": "tsc -p packages/client/tsconfig.json",
    "build:server": "tsc -p packages/server/tsconfig.json",
    "build:shared": "tsc -p packages/shared/tsconfig.json",
    "build:static": "cross-env NODE_ENV=production node packages/client/dist/src/build.js",

    "watch:ts": "tsc -b --watch",
    "watch:static": "cross-env NODE_ENV=development nodemon --watch packages/client/public -e css,jpg,png,gif,svg,ico,html --exec \"node packages/client/dist/js/build.js\"",
    "watch": "concurrently \"npm run watch:ts\" \"npm run watch:static\"",
    
    "vercel-dev": "cross-env NODE_ENV=development vercel dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vercel/node": "^5.1.7",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vercel/kv": "^0.2.4"
  }
}

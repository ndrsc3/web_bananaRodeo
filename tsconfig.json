{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    
    // Modules
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/client/src/*"]
    },
    
    // Emit
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    
    // Type Checking
    "strict": true,
    "skipLibCheck": true,
    
    // Interop
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    // JavaScript Support
    "allowJs": true,
    "checkJs": false,
    
    // Project References
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "files": [],
  "references": [
    { "path": "./packages/client" },
  ]
}
